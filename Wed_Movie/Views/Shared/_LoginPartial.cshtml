@using Microsoft.AspNetCore.Identity
@using Wed_Movie.Data

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@{
}
<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" id="logout" asp-controller="Account" asp-action="Logout">Logout</a>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-controller="Account" asp-route-strURL="" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-controller="Account"  asp-action="Login">Login</a>
    </li>
}
</ul>

       